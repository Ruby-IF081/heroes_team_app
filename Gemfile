gem 'puma', '~> 3.7'
gem 'rails', '~> 5.1.4'
gem 'rubocop', '~> 0.51.0', require: false
gem 'sass-rails', '~> 5.0'
gem 'slim'
gem 'uglifier', '>= 1.3.0'

