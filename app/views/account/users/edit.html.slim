- set_meta_tags title: "Edit - #{@user.first_name} #{@user.last_name} information",
                description: 'Edit user data'
.container.content-wrapper
  .content-header
    .row
      .col-md-3
        h2 Edit User
    .row.breadcrumbs-top
      .breadcrumb-wrapper.col-12
        = render_breadcrumbs({'Dashboard' => account_root_url,
                'Users' => account_users_path,
                'Edit user' => nil})
  .content-body
    .row
      .col-md-3
        = react_component("UserUpdate", props = {user: @user, csrf_token: form_authenticity_token}, options = {class: 'simple_form edit_user'})
